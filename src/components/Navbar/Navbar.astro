---
import { Image } from "astro:assets";
import logo from "@assets/logo.svg";
import MobileNavbar from "./MobileNavbar.astro";
import DesktopNavbar from "./DesktopNavbar.astro";

interface Props {
    class?: string;
    enableContactLink?: boolean;
}

const { class: className, enableContactLink = true } = Astro.props;

export interface LinkType {
    pageName: string;
    linkTo: string;
    acessibleName: string;
    isMobileOnly?: boolean;
    isLinkToSection?: boolean;
}
// TODO maybe accessible name is not needed
const links = [
    { pageName: "Home", linkTo: "/", acessibleName: "home page", isMobileOnly: true },
    { pageName: "About", linkTo: "/about", acessibleName: "about me page" },
    { pageName: "Work", linkTo: "/work", acessibleName: "my work page" },
    { pageName: "Process", linkTo: "/process", acessibleName: "process page" },
    ...(enableContactLink
        ? [
              {
                  pageName: "Contact",
                  linkTo: "#contact",
                  acessibleName: "contact form footer",
                  isLinkToSection: true
              }
          ]
        : [])
] as LinkType[];
---

<nav class:list={["flex flex-row justify-between", "px-6 py-3", "sm:px-10 sm:py-5", "lg:px-16 lg:py-8", className]}>
    <div class="basis-1/2">
        <a href="/" aria-label="go home link">
            <Image
                src={logo}
                alt="pekala design logo"
                width={156}
                height={91}
                class:list={["h-[50px] w-[86px]", "sm:h-[91px] sm:w-[156px]"]}
            />
        </a>
    </div>
    <div class="text-header__4 basis-1/2 self-center">
        <MobileNavbar class="md:hidden" links={links} />
        <DesktopNavbar class="hidden md:flex" links={links} />
    </div>
</nav>
