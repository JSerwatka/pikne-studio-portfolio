---
import aleksandraThinking from "@assets/index/thinking.png";
import aleksandraConfetti from "@assets/index/confetti.png";
import Image from "astro/components/Image.astro";

// TODO: reduce imgs size by 2
---

<div class:list={["min-h-screen flex bg-blue-100 items-center", "py-20", "px-6", "md:px-14"]}>
    <div class="relative">
        <!-- <div class:list={["flex flex-col", "lg:flex-row-reverse"]}> -->
        <!-- <div class="basis-1/2 z-20"> -->
        <div class="ml-auto max-w-[50%] relative z-20">
            <div class="text-paragraph__normal">What do i do</div>
            <div class="text-header__2 my-10">
                <div class="mb-10">
                    I craft branding, art direction and illustration based on psychological knowledge.
                </div>
                <div>
                    Through visual storytelling and empathy-driven design, I help your mission reach those who care
                    about it.
                </div>
            </div>
            <div>Contact me</div>
        </div>
        <!-- <div class="basis-1/2 flex"></div> -->
        <!-- </div> -->
        <!-- <div class="absolute bottom-0 left-0 h-full w-[60%] z-10"> -->
        <Image
            src={aleksandraThinking}
            alt="me thinking, squatting, red doodles around me"
            class="object-contain absolute bottom-0 left-0 max-w-[1000px] w-[60%] z-10"
            quality="min"
        />
        <Image
            src={aleksandraConfetti}
            alt="me thinking, squatting, red doodles around me"
            class="object-contain absolute bottom-0 left-0 max-w-[1000px] w-[60%] z-10"
            quality="min"
        />
        <!-- </div> -->
    </div>
</div>
