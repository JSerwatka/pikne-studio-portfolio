---
import { Image } from "astro:assets";
import Ribbon from "@components/Ribbon.astro";
import ProjectSection from "@components/Landing/ProjectSection.astro";
import LayoutBase from "@layouts/LayoutBase.astro";
import Introduction from "@components/Landing/Introduction.astro";
import TitleSection from "@components/Landing/TitleSection.astro";
import FlowerLinksSection from "@components/Landing/FlowerLinksSection.astro";
import ImageWithLoading from "@components/ImageWithLoading.astro";
import Footer from "@components/Footer.astro";

import pikachusSmall from "@assets/index/pikachus-small.png";
import pikachusSmallLoading from "@assets/index/pikachus-small-loading.png";
import psykologkompassenBg from "@assets/index/psykologkompassen-bg.png";
import psykologkompassenBgLoading from "@assets/index/psykologkompassen-bg-loading.png";
import psykologkompassenLogo from "@assets/index/psykologkompassen-logo.png";
---

<LayoutBase title="Translating feelings to visuals">
    <TitleSection />
    <Ribbon
        text="✹ for the bold dreamweavers ✹ for the change-makers ✹ for the good-doers ✹ for the beauty-seekers ✹ for the explorers ✹ for the ones with a story to tell ✹ for the dreamers ✹ for the ones taking the initiative ✹ for the helpers ✹ for the visionaries ✹ for the creators ✹ for the empathetic innovators  ✹ for the creative catalysts ✹ for the thoughtful trailblazers ✹ for the fearless futurists ✹ for the purpose-driven imaginationists ✹ for the conscious crafters"
        class="text-header__3 bg-ruby-red py-3 text-3xl text-light-pink sm:py-6 sm:text-5xl xl:py-9 xl:text-6xl"
        repeats={1}
    />
    <main class="grow">
        <Introduction />
        <div class="px-default min-h-[140vw] lg:min-h-[87vw] 2xl:min-h-[135vh]">
            <div class="relative text-center font-alexang text-[clamp(46px,20vw,280px)]">
                <div class="relative z-10">My work</div>
                <a href={"/work"} aria-label="link to all projects">
                    <video
                        autoplay
                        loop
                        muted
                        playsinline
                        class:list={[
                            "border-5 absolute bottom-[32%] left-1/2 w-full max-w-[1300px] -translate-x-1/2 translate-y-full rounded-2xl border-light-pink",
                            "aspect-square object-cover",
                            "lg:object-initial lg:aspect-video"
                        ]}
                        poster="/videos/slideshow-poster.avif"
                    >
                        <source src="/videos/slideshow-720p-movie.webm" type="video/webm" media="(min-width: 1024px)" />
                        <source src="/videos/slideshow-720p-movie.mp4" type="video/mp4" media="(min-width: 1024px)" />
                        <source src="/videos/slideshow-720p-square.webm" type="video/webm" />
                        <source src="/videos/slideshow-720p-square.mp4" type="video/mp4" />
                        <meta
                            itemprop="description"
                            content="a slideshow of mockups presenting the work of Aleksandra Pekala for Pikne studio, including examples of branding and illustrations"
                        />

                        Your browser does not support the video tag.
                    </video>
                </a>
            </div>
        </div>
        <ProjectSection
            title="sensus"
            year="2020"
            class="bg-tea-green py-10 text-dark-chocolate sm:py-20"
            linkTo="/project/sensus"
            linkAccessibleName="link to sensus project"
        >
            <video
                autoplay
                loop
                muted
                playsinline
                slot="image"
                class="rounded-3xl"
                poster="/videos/sensus-square-poster.avif"
            >
                <source src="/videos/sensus-short-square-720p.webm" type="video/webm" />
                <source src="/videos/sensus-short-square-720p.mp4" type="video/mp4" />
                <meta
                    itemprop="description"
                    content="a video presenting a sequence of massage and displaying the logo of the sensus brand"
                />
                Your browser does not support the video tag.
            </video>
            <Fragment slot="servies">branding</Fragment>
            <Fragment slot="description">
                Each aspect of the design works together to create an experience similar to the soothing touch provided
                by the business owner. The visuals are carefully chosen to reflect the comforting sensations of healing
                hands, capturing the essence of a therapy session through a visual language that underscores a
                dedication to relaxation.
            </Fragment>
        </ProjectSection>
        <div
            class:list={[
                "px-default flex h-screen items-center justify-center  bg-ice-blue py-10 text-dark-chocolate sm:py-20"
            ]}
        >
            <a
                href="/project/psykologkompassen"
                aria-label="link to psykologkompassen project"
                class="relative flex h-full w-full justify-center sm:max-w-[682px] xl:max-w-[1300px]"
            >
                <ImageWithLoading
                    src={psykologkompassenBg}
                    srcLoading={psykologkompassenBgLoading}
                    width={psykologkompassenBg.width}
                    alt="a woman facing away from the camera looks at the landscape view in front of her - on this background a logo of Psykologkompassen brand is displayed"
                    class="h-full w-full rounded-2xl object-contain sm:aspect-square xl:aspect-auto"
                    classImage="rounded-2xl object-contain"
                />
                <Image
                    src={psykologkompassenLogo}
                    width={psykologkompassenLogo.width}
                    alt="psykologkompassen logo"
                    class:list={["absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2", "w-3/4", "sm:w-1/2"]}
                />
            </a>
        </div>
        <ProjectSection
            title="Illustrations"
            year="2021 - 2023"
            class="bg-volt py-10 text-dark-chocolate sm:py-20"
            linkTo="/illustrations"
            linkAccessibleName="link to my illustrations"
        >
            <Fragment slot="image">
                <ImageWithLoading
                    src={pikachusSmall}
                    srcLoading={pikachusSmallLoading}
                    width={pikachusSmall.width}
                    alt="a digital illustration of a young, blonde girl with indifferent face surrounded by multitude of Pikachu pokemon plushies"
                    class="rounded-3xl"
                    classImage="rounded-3xl"
                />
            </Fragment>

            <Fragment slot="description">
                My illustrations are a reflection of my fascination with the storytelling power of color, shapes, and
                light. I like to reflect on emotions, relations, a sense of humanity and beauty.
            </Fragment>
        </ProjectSection>
        <a href="/work" aria-label="click to see more work">
            <Ribbon
                text="✺ click to see more work "
                class="text-header__3 bg-lilac py-3 text-3xl text-dark-chocolate sm:py-6 sm:text-5xl xl:py-9 xl:text-6xl"
                repeats={20}
            />
        </a>
        <FlowerLinksSection />
    </main>
    <Footer />
</LayoutBase>
