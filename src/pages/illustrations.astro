---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import PictureLink from "@components/PictureLink.astro";
import ScrollIndicator from "@components/ScrollIndicator.astro";

import pikachus from "@assets/illustrations/pikachus.png";
import designedForLove from "@assets/illustrations/designed-for-love.png";
import pinkAndFeminity from "@assets/illustrations/pink-and-feminity.png";
import lilou1 from "@assets/illustrations/lilou-1.jpg";
import lilou2 from "@assets/illustrations/lilou-2.png";
import kazachstanIdentity from "@assets/illustrations/kazakhstan-identity.jpg";
import baltic1 from "@assets/illustrations/baltic-in-the-middle-1.png";
import baltic2 from "@assets/illustrations/baltic-in-the-middle-2.png";
import baltic3 from "@assets/illustrations/baltic-in-the-middle-3.png";
import breakfast from "@assets/illustrations/breakfast.png";
import superbloomDeer from "@assets/illustrations/superbloom-deer.png";
import bunnyWonderland from "@assets/illustrations/bunny-wonderland.jpg";
import womanWithFlowers from "@assets/illustrations/woman-with-flowers.png";
import olga from "@assets/illustrations/saint-olga-of-kiev.png";
import ukraine from "@assets/illustrations/ukraine.jpg";
import mongolia from "@assets/illustrations/mongolia.png";
import brandingThumbnail from "@assets/thumbnails/my-own-branding.webp";

// TODO: add alt for images left
// TODO: add video
// TODO: check sizing of hero text (overflowing)
// TODO: check margins and gap
// TODO: proper size of images
// TODO: add gap
// TODO: add max-height: children:max-h-[calc(100vh-10vh)]
// TODO: add picture link img and alt
---

<Layout title="Illustrations">
    <div class="mx-auto mb-[30vh]">
        <div class="sticky top-[20vh] z-10 mt-[20vh] whitespace-nowrap text-center font-alexang text-[min(30vw,420px)]">
            Illustrations
            <ScrollIndicator />
        </div>
        <div
            class:list={[
                "relative z-20 flex flex-col children:max-h-[90vh] children:w-auto  children:rounded-3xl children:object-cover",
                "mt-[10vh] gap-y-40 ",
                "lg:mt-[30vh] lg:gap-y-64"
            ]}
        >
            <Image
                src={pikachus}
                width={pikachus.width / 2}
                alt="a digital illustration of a young, blonde girl with indifferent face surrounded by multitude of Pikachu pokemon plushies"
                class="self-end"
            />
            <Image
                src={designedForLove}
                width={designedForLove.width / 2}
                alt="a digital editorial illustration showing an assortment of individuals with distinct faces as the users of a dating app, there are virtual connections between them suggesting if they are a match or not"
                class="self-center"
            />
            <Image
                src={pinkAndFeminity}
                width={pinkAndFeminity.width / 2}
                alt=" a digital illustration depicting three woman in pink attire: a girl wearing accessories in kawaii style covering her face with a phone while taking a selfie, Marylin Monroe in her iconic magenta-colored gown and diamond necklace and Nicki Minaj with pink wig and pink top"
                class="self-center"
            />
            <!-- <div
                class="flex gap-x-6 self-center children:max-h-[90vh] children:w-auto children:rounded-3xl children:object-cover"
            >
                <Image
                    src={lilou1}
                    width={lilou1.width / 2}
                    alt="a digital, vividly-colored illustration depicting a woman leaning on the table, wearing a crocheted top and golden jewelry, with Icelandic poppies in the background"
                    class="col-span-4 col-start-3"
                />
                <Image
                    src={lilou2}
                    width={lilou2.width / 2}
                    alt="a digital, vividly-colored illustration depicting a gropu of woman hugging, each of them wearing multiple pieces of jewelry"
                    class="col-span-4 col-start-7"
                />
            </div> -->

            <Image
                src={kazachstanIdentity}
                width={kazachstanIdentity.width / 2}
                alt="a digital illustration depicting a girl taking a selfie in the mirror - the mirror reflection shows the girl wearing a traditional Kazakh costume"
                class="self-end"
            />
            <Image src={baltic1} width={baltic1.width / 2} alt="" class="w-1/3 self-start" />
            <Image src={baltic2} width={baltic2.width / 2} alt="" class="w-1/3 self-center" />
            <Image
                src={baltic3}
                width={baltic3.width / 2}
                alt="a digital illustration depicting a face of a woman emerging from water in between two lands"
                class="w-1/3 self-end"
            />
            <Image
                src={breakfast}
                width={breakfast.width / 2}
                alt="a vividly colored digital illustration depicting four sandwiches laying on the table with different ingredients on top: one with salmon and guacamole, one with egg, bacon and salad, one with egg, asparagus and horseradish, one with strawberries, basil and cream cheese"
                class="self-center"
            />
            <Image
                src={superbloomDeer}
                width={superbloomDeer.width / 2}
                alt=" a digital illustration in painterly style depicting a deer laying down on a meadow full of blooming purple, yellow and pink flowers"
                class="self-center"
            />
            <Image src={bunnyWonderland} width={bunnyWonderland.width / 2} alt="" class="self-center" />
            <Image src={womanWithFlowers} width={womanWithFlowers.width / 2} alt="" class="self-start" />
            <Image src={olga} width={olga.width / 2} alt="" class="self-center" />
            <Image src={ukraine} width={ukraine.width / 2} alt="" class="self-center" />
            <Image src={mongolia} width={mongolia.width / 2} alt="" class="self-start" />
        </div>
    </div>
    <div class="min-h-screen">
        <PictureLink
            title="My own branding"
            subTitle="HOW DOES IT LOOK IN PRACTICE? TAKE A LOOK AT A CASE STUDY:"
            linkTo="/case-study"
            linkAccessibleName="link to my own branding"
            src={brandingThumbnail}
            alt=""
        />
    </div>
</Layout>
