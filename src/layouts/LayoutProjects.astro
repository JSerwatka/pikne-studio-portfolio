---
import Navbar from "@components/Navbar/Navbar.astro";
import LayoutBase from "./LayoutBase.astro";
import Footer from "@components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<LayoutBase title={title}>
    <div class="after:block after:h-screen after:w-full after:content-['']">
        <header class="absolute top-0 z-10 h-screen w-full">
            <Navbar class="absolute z-20 w-full bg-white/30 backdrop-blur-sm" />
            <div
                class:list={[
                    "absolute z-10 h-full w-full",
                    "children:h-full children:w-full children:rounded-b-3xl children:object-cover children:object-center"
                ]}
            >
                <slot name="hero-background" />
            </div>
        </header>
        <!-- <div
                class:list={}
            >
                <slot name="hero-background" />
            </div> -->
        <!-- </header> -->
        <main class="sticky top-0 min-h-[100vh] pt-48">
            <slot name="main" />
        </main>
    </div>
    <Footer />
</LayoutBase>
